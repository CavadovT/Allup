@model Category
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    
        <form method="post" enctype="multipart/form-data">
            <h1>@Model.Name</h1>
        
              <div class="form-group">
                 <label asp-for="Name" ></label>
                 <input asp-for="Name"  class="form-control"  placeholder="Enter Name">
                 <span class="text-danger" asp-validation-for="Name"></span>
              </div>
             
             <div class="form-group">
                 <label asp-for="Photo" ></label>
                 <input asp-for="Photo"  class="form-control"   placeholder="Choose Photo">
                 <span class="text-danger" asp-validation-for="Photo"></span>
            </div>

              <button type="submit" class="btn btn-success">Submit</button>
             <a class="btn btn-dark" asp-action="Index">Go Back</a>
        </form>
</div>
 @section scripts
{
    <partial name="_ValidationPartial"></partial>
}
    


