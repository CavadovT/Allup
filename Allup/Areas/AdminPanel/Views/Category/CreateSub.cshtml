@model Category 
@{
    ViewData["Title"] = "CreateSub";
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminLayout.cshtml";
}


<div class="row">
    <h1>Sub Category Create</h1>
  
   <div class="row">
   
        <form method="post" >
              <div class="form-group">
                 <label asp-for="Name" ></label>
                 <input asp-for="Name"  class="form-control"  placeholder="Enter Name">
                 <span class="text-danger" asp-validation-for="Name"></span>
              </div>
              
               <select asp-for="Id" asp-items="@ViewBag.MainCategories" class="form-select" aria-label="Default select example">
                 
                  <option selected>Select the Main Category</option>
             
                </select>

              <button type="submit" class="btn btn-success">Submit</button>
             <a class="btn btn-dark" asp-action="Index">Go Back</a>
        </form>
</div>

