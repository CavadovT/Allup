@model Category
@{
    ViewData["Title"] = "UpdateSub";
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminLayout.cshtml";
}


<div class="row">
    
        <form method="post" enctype="multipart/form-data">
           
            <input type="hidden" name="subid" value="@ViewBag.subId" />

              <div class="form-group">
                 <label asp-for="Name" ></label>
                 <input asp-for="Name"  class="form-control"  placeholder="Enter Name">
                 <span class="text-danger" asp-validation-for="Name"></span>
              </div>
             
            <select asp-for="Id" asp-items="@ViewBag.MainCat" class="form-select">
                 
                  <option selected>Select the Category</option>
             
                </select>
             <span class="text-danger" asp-validation-for="Id"></span>

              <button type="submit" class="btn btn-success">Submit</button>
             <a class="btn btn-dark" asp-action="Index">Go Back</a>
        </form>
</div>
 @section scripts
{
    <partial name="_ValidationPartial"></partial>
}

