@model Product
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <h1>Product</h1>
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
              <div class="form-group">
                 <label asp-for="Name" ></label>
                 <input asp-for="Name"  class="form-control"  placeholder="Enter Name">
                 <span class="text-danger" asp-validation-for="Name"></span>
              </div>

              <div class="form-group">
                 <label asp-for="Description" ></label>
                 <input asp-for="Description" type="text" class="form-control"  placeholder="Add Description">
                 <span class="text-danger" asp-validation-for="Description"></span>
              </div>

              <div class="form-group">
                 <label asp-for="Price" ></label>
                 <input asp-for="Price"  class="form-control"   placeholder="Enter Price">
                 <span class="text-danger" asp-validation-for="Price"></span>
              </div>

              <div class="form-group">
                 <label asp-for="Count" ></label>
                 <input asp-for="Count"  class="form-control"   placeholder="Enter Count">
                 <span class="text-danger" asp-validation-for="Count"></span>
              </div>

              <div class="form-group">
                 <label asp-for="TaxPercent" ></label>
                 <input asp-for="TaxPercent"  class="form-control"   placeholder="Tax percent">
                 <span class="text-danger" asp-validation-for="TaxPercent"></span>
              </div>

              <div class="form-group">
                 <label asp-for="DiscountPercent" ></label>
                 <input asp-for="DiscountPercent"  class="form-control"   placeholder="Discount percent?">
                 <span class="text-danger" asp-validation-for="DiscountPercent"></span>
              </div>

                <input name="isfeature" type="checkbox"  class="form-check-input" value="true"  >
                <label for="isfeature" class="form-check-label">IsFeatured</label><br />

                <input name="isfeature" type="hidden"  class="form-check-input" value="false"  >
                
                <input name="isfeature" type="checkbox"  class="form-check-input" value="true"  >
                <label for="isnew" class="form-check-label">IsNewArrivel</label><br />

                <input name="isfeature" type="hidden"  class="form-check-input" value="false"  >

                <input name="isbest" type="checkbox"  class="form-check-input" value="true"  >
                <label for="isbest" class="form-check-label">IsBestSeller</label><br />

                <input name="isbest" type="hidden"  class="form-check-input" value="false"  >
                 
              

              <select asp-for="CategoryId" asp-items="@ViewBag.Categories" class="form-select" aria-label="Default select example">
                 
                  <option selected>Select the Category</option>
             
                </select>
                <br />
                 <select asp-for="BrandId" asp-items="@ViewBag.Brands" class="form-select" aria-label="Default select example">
                 
                  <option selected>Select the Brand</option>
             
                </select>
                <br />

                <select asp-for="TagIds" asp-items="@ViewBag.Tags"  class="form-select-lg" multiple >
                 
                  <option selected>Select the Tags</option>
             
                </select>
                <br />
                <br />

                <div class="form-group">
                 <label asp-for="Photos" ></label>
                 <input asp-for="Photos"  class="form-control"   placeholder="Choose Photo">
                 <span class="text-danger" asp-validation-for="Photos"></span>
              </div>

              <button type="submit" class="btn btn-success">Submit</button>
             <a class="btn btn-dark" asp-action="Index">Go Back</a>
        </form>
</div>
@section scripts
{
    <partial name="_ValidationPartial"></partial>
}

