@model List<Product>
@foreach (var item in Model)
{
    <div class="product-col col-md-4 col-sm-6">
       <div class="single-product mt-30">
           <div class="product-image">
               <a asp-controller="Product" asp-action="Detail">
                   @foreach (var img in item.ProductImages.Where(i=>i.IsMain==true))
                  {
                   <img class="first-image" src="~/assets/images/product/@img.ImgUrl" alt="product">
                  }
                   
               </a>
           </div>
           <div class="product-content">
               <h4 class="product-title"><a href="single-product.html">@item.Description</a></h4>
               <ul class="product-rating">
                   <li class="rating-on"><i class="fas fa-star"></i></li>
                   <li class="rating-on"><i class="fas fa-star"></i></li>
                   <li class="rating-on"><i class="fas fa-star"></i></li>
                   <li class="rating-on"><i class="fas fa-star"></i></li>
                   <li class="rating-on"><i class="fas fa-star"></i></li>
               </ul>                                            
               <div class="product-price">
                   <span class="regular-price">@item.Price</span>
                   <span class="price-sale">@item.DiscountPrice</span>
               </div>
           </div>
       </div> <!-- single product -->
</div>
}
